<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="#ffffff" >
    
    <LinearLayout 
        android:id="@+id/login_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView 
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/login_head" 
            android:contentDescription="@null"/>
        
        <EditText 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="@string/login_name" 
            android:background="@null"
            android:inputType="text"/>
    </LinearLayout>
    
    <com.aimei.view.ClearEditText 
        android:id="@+id/login_password_ET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_top_layout"
        android:singleLine="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="50dp"
        android:inputType="textPassword"
        android:textStyle="normal"
        android:background="@drawable/shape_bg"
        android:drawableLeft="@drawable/icon_password_left"
        android:hint="@string/login_pwd_tip"/>
    
    <Button 
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_password_ET"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="20sp"
        android:textStyle="normal"
        android:textColor="#ffffff"
        android:background="@drawable/login_selector_bg"
        android:text="@string/login_login"/>
    
    <Button 
        android:id="@+id/login_register_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="120dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textStyle="normal"
        android:textColor="#ffffff"
        android:background="@drawable/login_register_selector_bg"
        android:text="@string/login_register"/>

</RelativeLayout>
